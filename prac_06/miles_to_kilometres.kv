<Label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 0.9

<TextInput>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.7
        Rectangle:
            pos: self.pos
            size: self.size
    color: 1, 1, 1, 1

<Button>:
    canvas.before:
        Color:
            rgba: 255, 255, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 255, 255, 1, 1
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34.0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
#            background_color: (0, 0, 0, 0)
            foreground_color: (255, 255, 255, 255)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert mi to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'

